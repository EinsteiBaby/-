page {
  /* position: fixed; */
}

.title {
  position: absolute;
  top: 0.8rem;
  font-size: 0.9rem;
  background-color: #fff;
  width: 100vw;
}

.content {
  position: absolute;
  width: 100vw;
  margin-top: 5rem;
  padding-bottom: 2.5rem;
}

.span {
  background-color: #ffc900;
  width: 0.3rem;
  height: 1.5rem;
  display: inline-block;
  vertical-align: middle;
  margin-left: 1rem;
  margin-top: 0.6rem;
  margin-bottom: 0.6rem;
}

.title text {
  vertical-align: middle;
  font-size: 1.2rem;
  margin-left: 0.5rem;
  color: #333;
  font-weight: bold;
  padding-right: 0.5rem;
}

.icon {
  display: inline-block;
  position: absolute;
  top: 15rpx;
  color: #ffc900;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.footer button {
  display: inline-block;
  width: 50%;
}

.photo {
  margin-top: 0.8rem;
  background-color: #fff;
  font-size: 0.8rem;
  padding: 0.5rem;
}

.photo image {
  margin-top: 0.5rem;
  width: 80px;
  height: 80px;
  display: inline-block;
  margin-right: 0.5rem;
  padding: 5px;
  border: 1px solid #eee;
  border-radius: 0.2rem;
}

.map {
  background-color: #fff;
  margin-top: 0.8rem;
  margin-bottom: 2rem;
  font-size: 0.8rem;
  padding: 0.5rem;
  height: 2.5rem;
  line-height: 2.5rem;
}

.map text {
  padding-left: 1.5rem;
  vertical-align: middle;
}
