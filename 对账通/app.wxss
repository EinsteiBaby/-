/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f4f4f4;
}

.nav {
  width: 100%;
  overflow: hidden;
  height: 50px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999999;
}

.nav-title {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 999999;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  letter-spacing: 2px;
}

.nav .back {
  margin-left: 0.8rem;
  width: 60px;
  height: 17px;
  position: absolute;
  bottom: 0.5rem;
  left: 0;
  padding: 8px 15px;
  border: 0.5px solid #eee;
  border-radius: 2rem;
  z-index: 999999;
}

.nav .home {
  width: 20px;
  height: 20px;
  position: absolute;
  bottom: 0.4rem;
  left: 55px;
  padding: 10px 15px;
  z-index: 999999;
}

.nav .scan {
  width: 25px;
  height: 25px;
  position: absolute;
  bottom: -5px;
  left: 0;
  padding: 15px 15px;
}

.bg-white {
  background-color: #ffc900;
}

.bg-gray {
  background-color: #f7f7f7;
}

.overflow {
  overflow: auto;
}

.hidden {
  overflow: hidden;
}
